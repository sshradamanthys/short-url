<div class='d-flex flex-column align-items-center mt-3'>
  {{#if image}}
    <img src='/images/profiles/{{image}}' alt='u-profile' class='rounded-circle' />
    {{else}}
      <img src='/images/profiles/default.jpg' alt='d-profile' class='rounded-circle' />
  {{/if}}
  <h1>{{user.name}}</h1>
  <p>Edit your profile here</p>
</div>
<div class='d-flex justify-content-center'></div>
  <form
    action='/profile?_csrf={{csrfToken}}'
    method='post'
    enctype='multipart/form-data'
  >
    <div class="d-flex justify-content-center">
      <div class="d-flex flex-column align-items-center w-25">
        <input type='file' name='file' class='form-control' />
        <button class='btn btn-dark my-3 mx-auto'>Send</button>
      </div>
    </div>
  </form>
</div>
